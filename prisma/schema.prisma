// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator markdown {
  provider = "prisma-markdown"
  output   = "./ERD.md"
  title    = "Estimate System"
}

/// @namespace EstimateSystem
enum Country {
  KR @map("KR")
  US @map("US")
  JP @map("JP")
  CN @map("CN")
  VN @map("VN")
}

/// @namespace EstimateSystem
enum Currency {
  KRW @map("KRW")
  USD @map("USD")
  JPY @map("JPY")
  CNY @map("CNY")
  VND @map("VND")
}

/// @namespace EstimateSystem
enum HardwareType {
  CPU   @map("CPU")
  GPU   @map("GPU")
  RAM   @map("RAM")
  MB    @map("MB")
  DISK  @map("DISK")
  OTHER @map("OTHER")
}

/// @namespace EstimateSystem
enum EstimateStatus {
  draft     @map("DRAFT") /// estimate create by user.
  estimated @map("ESTIMATED") /// AI estimate done.
  pickup    @map("PICKUP") /// The PC is being picked up for delivery
  checking  @map("CHECKING") /// The PC is being checked by your company
  approved  @map("APPROVED") /// The check is successful, and payment can be processed
  paid      @map("PAID") /// Payment has been sent to the user
  error     @map("ERROR")
}

enum DiskKind {
  ssd @map("ssd")
  hdd @map("hdd")
}

/// @namespace EstimateSystem
/// @namespace CPU
/// @namespace GPU
/// @namespace MotherBoard
/// @namespace RAM
/// @namespace DISK
model estimate {
  id                   String                 @id @db.Uuid
  name                 String
  status               EstimateStatus
  created_at           DateTime               @default(now()) @db.Timestamptz
  updated_at           DateTime               @updatedAt @db.Timestamptz
  deleted_at           DateTime?              @db.Timestamptz
  cpu_estimate         cpu_estimate[]
  gpu_estimate         gpu_estimate[]
  ram_estimate         ram_estimate[]
  disk_estimate        disk_estimate[]
  motherboard_estimate motherboard_estimate[]
  user_info            user_info?

  @@index([status])
  @@index([created_at])
}

/// @namespace EstimateSystem
/// @namespace CPU
/// @namespace GPU
/// @namespace MotherBoard
/// @namespace RAM
/// @namespace DISK
model user_info {
  id             String          @id @db.Uuid
  estimate_id    String          @unique @db.Uuid
  name           String
  country        Country
  phone_number   String
  created_at     DateTime        @default(now()) @db.Timestamptz
  updated_at     DateTime        @updatedAt @db.Timestamptz
  deleted_at     DateTime?       @db.Timestamptz
  estimate       estimate        @relation(fields: [estimate_id], references: [id], onDelete: Cascade)
  pickup_address pickup_address?

  @@index([phone_number])
  @@index([created_at])
}

/// @namespace EstimateSystem
model pickup_address {
  id            String    @id @db.Uuid
  user_info_id  String    @unique @db.Uuid
  address       String
  adress_detail String
  zip_code      String
  created_at    DateTime  @default(now()) @db.Timestamptz
  updated_at    DateTime  @updatedAt @db.Timestamptz
  deleted_at    DateTime? @db.Timestamptz
  user_info     user_info @relation(fields: [user_info_id], references: [id], onDelete: Cascade)
}

/// @namespace EstimateSystem
/// @namespace CPU
/// @namespace GPU
/// @namespace MotherBoard
/// @namespace RAM
/// @namespace DISK
model shop {
  id                        String                      @id @db.Uuid
  name                      String                      @unique
  country                   Country
  created_at                DateTime                    @default(now()) @db.Timestamptz
  updated_at                DateTime                    @updatedAt @db.Timestamptz
  deleted_at                DateTime?                   @db.Timestamptz
  cpu_estimate              cpu_estimate[]
  gpu_estimate              gpu_estimate[]
  motherboard_estimate      motherboard_estimate[]
  ram_estimate              ram_estimate[]
  disk_estimate             disk_estimate[]
  cpu_pricing_table         cpu_pricing_table[]
  gpu_pricing_table         gpu_pricing_table[]
  motherboard_pricing_table motherboard_pricing_table[]
  ram_pricing_table         ram_pricing_table[]
  disk_pricing_table        disk_pricing_table[]
}

/// @namespace EstimateSystem
/// @namespace CPU
/// @namespace GPU
/// @namespace MotherBoard
/// @namespace RAM
/// @namespace DISK
model ai_answer {
  id                   String                 @id @db.Uuid
  name                 String
  table_price          Float
  buying_price         Float
  currency             Currency
  metadata             String?
  created_at           DateTime               @default(now()) @db.Timestamptz
  updated_at           DateTime               @updatedAt @db.Timestamptz
  deleted_at           DateTime?              @db.Timestamptz
  cpu_estimate         cpu_estimate[]
  gpu_estimate         gpu_estimate[]
  motherboard_estimate motherboard_estimate[]
  ram_estimate         ram_estimate[]
  disk_estimate        disk_estimate[]
}

/// @namespace EstimateSystem
/// @namespace CPU
model cpu {
  id           String         @id @db.Uuid
  hw_key       String         @unique
  model_name   String
  vendor       String
  core_count   Int
  thread_count Int?
  base_clock   Float?
  boost_clock  Float?
  metadata     String?
  created_at   DateTime       @default(now()) @db.Timestamptz
  updated_at   DateTime       @updatedAt @db.Timestamptz
  deleted_at   DateTime?      @db.Timestamptz
  cpu_estimate cpu_estimate[]

  @@index([vendor])
  @@index([model_name])
}

